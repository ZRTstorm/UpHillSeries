<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Uphill" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- 배경 색상 -->
        <item name="android:background">@color/background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:statusBarColor">@color/background</item>
        <!-- 글꼴 설정 -->
        <item name="fontFamily">@font/tmoneyroundwindextrabold</item>
        <!-- 기본 텍스트 색상 -->
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="Theme.Uphill.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 배경 색상 -->
        <item name="android:background">@color/background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:textColor">@color/text_color</item>
        <!-- 글꼴 설정 -->
        <item name="fontFamily">@font/tmoneyroundwindextrabold</item>
    </style>
</resources>
