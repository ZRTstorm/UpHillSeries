<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Uphill" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- 배경 색상 -->
        <item name="android:background">@color/background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:statusBarColor">@color/background</item>
        <!-- 글꼴 설정 -->
        <item name="fontFamily">@font/tmoneyroundwindextrabold</item>
        <!-- 기본 텍스트 색상 -->
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="Theme.Uphill.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 배경 색상 -->
        <item name="android:background">@color/background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:textColor">@color/text_color</item>
        <!-- 글꼴 설정 -->
        <item name="fontFamily">@font/tmoneyroundwindextrabold</item>
    </style>
    <!--캘린더뷰 -->
    <style name="CalendarDateTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#4F4F4F</item>
        <item name="android:fontFamily">@font/tmoneyroundwindextrabold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalendarWeekDayTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#A3B1C6</item>
        <item name="android:fontFamily">@font/tmoneyroundwindextrabold</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
